.contacts
	margin-top 95px
	padding-bottom 7px
	display block
	background-color #fff
	&__wrap
		display flex
		+below(992px)
			flex-direction column
			align-items center
	&__form
		margin-top -25px
		margin-left 58px
		padding 38px 20px
		display flex
		flex-direction column
		justify-content center
		width 490px
		align-items center
		background-color #fff
		box-shadow 0 10px 20px #ccc
		+below(1200px)
			margin-right 30px
			margin-left 0
			width 440px
		+below(992px)
			width 100%
			max-width 500px
		+below(570px)
			margin-right 0
	&__form-title
		margin-bottom 5px
		font-family Gbold
		font-size 20px
	&__form-subtitle
		font-family GMedium
		font-size 16px
	&__form-wrap
		margin-top 38px
		display flex
		flex-direction column
		justify-content center
	&__input
		margin-bottom 12px
		padding-left 22px
		width 270px
		height 40px
		font-family GMedium
		background-color transparent
		border 1px solid #c6c6c6
		border-radius 5px
		&::placeholder
			font-family GRegI
			font-size 14px
	&__select
		position relative
		margin-bottom 18px
		&:before
			position absolute
			z-index 1
			top 50%
			right 20px
			transform translateY(-50%)
			display block
			size(15px)
			content ''
			background url(../images/arrow-down.png) center center no-repeat
		select
			position relative
			z-index 2
			padding-left 22px
			width 270px
			height 40px
			font-family GRegI
			color #777
			background-color transparent
			border 1px solid #c6c6c6
			border-radius 5px
			appearance none
	&__button
		button(270px)
	&__text
		margin-top 48px
		margin-left auto
		max-width 562px
		+below(992px)
			max-width 100%
	&__title
		margin-bottom 26px
		font-family Bebas
		font-size 39px
	&__desc
		margin-bottom 20px
		padding-right 45px
		font-family GMedium
		font-size 16px
		line-height 21px
		strong
			font-family Gbold

