.services
	position relative
	margin-top -70px
	display block
	background url(../images/dots.png) top right 40px no-repeat
	+below(992px)
		margin-top 20px
	&__wrap
		margin 0 auto
		display flex
		flex-wrap wrap
		justify-content space-between
		max-width 1000px
		+below(992px)
			justify-content space-around
	&__block
		position relative
		z-index 1
		padding 42px 20px 20px
		display flex
		flex-direction column
		width 302px
		text-align center
		background-color #f8f8f8
		transition .4s
		+below(992px)
			z-index 0
		&:hover
			z-index 2
			background-color #fff
			box-shadow 0 8px 20px #ccc
	&__block-img
		margin 0 auto 25px
		size(69px)
		object-fit contain
	&__block-title
		margin-bottom 16px
		font-family Gbold
		font-size 15px
		text-transform uppercase
	&__block-desc
		font-family GMedium
		font-size 15px
		line-height 21px
	&__side-text
		position absolute
		top -144px
		left -168px
		display flex
		align-items center
		transform rotate(-90deg) translateX(-100%)
		font-family GMedium
		font-size 12px
		color _yellow
		+below(992px)
			top -227px
			left -227px
		&:after
			position relative
			z-index 0
			margin-left 15px
			display block
			width 200px
			height 1px
			content ''
			background-color _yellow
		strong
			padding 0 3px
			font-family Gbold