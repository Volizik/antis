.nav
	flex-grow 1
	+below(992px)
		z-index 20
	&__wrap
		margin-bottom 6px
		display flex
		justify-content space-between
		align-items center
		max-width 500px
		+below(992px)
			position fixed
			z-index 20
			top 0
			left 0
			display none
			justify-content space-evenly
			flex-direction column
			width 100vw
			max-width 100vw
			height 100vh
			background-color rgba(0, 0, 0, .9)
	&__link
		font-family GMedium
		font-size 16px
		text-decoration none
		color #fff
		+below(992px)
			font-size 7vh
	&__button
		position fixed
		z-index 21
		top 25px
		right 40px
		margin-left auto
		display none
		size(40px)
		cursor pointer
		color _yellow
		background-color #fff
		border-radius 50%
		box-shadow 5px 5px 10px #000
		+below(992px)
			display flex
			justify-content center
			align-items center
		&:before, &:after, span
			display block
			width 30px
			height 2px
			content ''
			background-color _yellow
			transition .4s
		&:before
			position absolute
			top 15px
		&:after
			position absolute
			bottom 15px
		&--clicked
			span
				opacity 0
			&:before
				top 19px
				transform rotate(45deg)
			&:after
				bottom 19px
				transform rotate(-45deg)

